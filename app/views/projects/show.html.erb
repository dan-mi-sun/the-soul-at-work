<div class="profile-page">
  <h3><%= @project.title %></h3>
  <hr />

  <h4>About the Buyer:</h4>
  <p><%= @project.about %></p>
  <hr />

  <h4>About the Project:</h4>
  <p><%= @project.description %></p>
  <hr />

  <ul>
    <li>Closing date: <%= @project.closing_date %></li>
    <li>Requisite Skills:
      <% @project.skills.each do |skill| %>
        <%= skill.name %>
    <% end %>
    </li>
  </ul>
  <hr />

  <button class="btn btn-default"><%= link_to 'Submit a Pitch', new_project_proposal_path(@project), class: "show-proposal" %></button><br />

<hr />

  <h4>Proposals for this project:</h4>
  <% @project.proposals.each do |proposal| %>
  <li><%= link_to proposal.title, project_proposal_path(@project, proposal.id), class: "show-proposal"  %></li><br />
  </li>
<% end %>
</ul>

</div>

