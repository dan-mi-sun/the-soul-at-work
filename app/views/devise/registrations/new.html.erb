<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <span id="error_explanation">
    <span class="alert alert-error">
      <%= devise_error_messages! %>
    </span>
  </span>

  <%= f.email_field :email, autofocus: true %>
  <%= f.password_field :password, autocomplete: "off" %>
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
  <%= f.text_field :username %> </div>
  <%= f.text_field :first_name %> </div>
  <%= f.text_field :last_name %> </div>
  <%= f.text_field :address %> </div>
  <%= f.date_select(:birthday, { start_year: (120.years.ago).year, end_year: (18.years.ago).year }) %>

  <p>Account Type</p>
  <div id="account-type">
    <div><%= f.radio_button :type, "Buyer" %><br />
      <%= f.label :type_buyer, "Buyer" %></div>

    <div><%= f.radio_button :type, "Creative" %><br />
      <%= f.label :type_creative, "Creative" %></div>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

  <%= render "devise/shared/links" %>
