<div class="profile-page">
  <h3>Proposal Title: <%= @proposal.title %></h3>
  <hr />
  <h4> Project Title: <%= link_to @project.title, project_path(@project.id), class: "show-project" %> </h4>
  <h5> Tendered by: <%= link_to @project.buyer.username, user_path(@project.buyer) %></h5>
  <hr />

  <h4>About the Creative:</h4>
  <p><%= @proposal.about %></p>
  <hr />

  <h4>About the Proposal:</h4>
  <p><%= @proposal.description %></p>
  <hr />

  <h4>Status of this Proposal:</h4>
  <p><%= @proposal.status %></p>
  <hr />

  <% if @project.buyer_id == current_user.id %>
    <%= form_for :proposal, url: project_proposal_path(@project, @proposal), :method => :put do |f| %>
      <%= f.select( :status, [['Accept', 1], ['Decline', 2]]) %>
    <%= submit_tag "Submit", class: "btn btn-default" %>
    <% end %>
  <% end %>

</div>
