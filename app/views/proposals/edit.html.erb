<div class="project-page edit">
  <h2>Edit Proposal Page</h2>

  <% if @proposal.errors.any? %>
    <% @proposal.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  <% end %>

  <%= form_for :proposal, url: project_proposal_path(@project, @proposal), :method => :put do |f| %>

    <h3><%= @proposal.title %></h3>

    <%= field_set_tag do %>
    <%= f.label :description %>
  <%= f.text_area(:description, :cols => 50, :rows => 20, :placeholder => "Tell us about the project ... you have to write a minimum of 10 characters.", :class => "description") %>
<% end %>

  <%= field_set_tag do %>
    <%= f.label :about %>
  <%= f.text_area(:about, :cols => 50, :rows => 20, :placeholder => "Tell us about yourself ... You have to write a minimum of 10 characters", :class => "about") %>
<% end %>

  <button type="submit" class="btn btn-default"><%= submit_tag "Update Proposal" %></button>

<% end %>
</div> 
